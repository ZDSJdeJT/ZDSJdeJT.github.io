---
import { Section } from '@/components/section';
import { useTranslations, type Lang } from '@/i18n';

const currentLocale = Astro.currentLocale as Lang;

const t = useTranslations(currentLocale);

type Item = string;

const credentialList: Item[] = [
  t({
    en: 'Intermediate Network Engineer (Chinese National Certification)',
    'zh-cn': '软考中级网络工程师',
  }),
  t({
    en: 'Computer Level 4 (Network Engineer)',
    'zh-cn': '计算机4级（网络工程师）',
  }),
  t({
    en: 'College English Level 4',
    'zh-cn': '大学英语4级',
  }),
  t({
    en: 'JLPT N3 (Japanese Language Proficiency Test)',
    'zh-cn': '日语N3',
  }),
  t({
    en: "7th Place in Badminton Men's Team at Ningxia Hui Autonomous Region Sports Meet",
    'zh-cn': '宁夏回族自治区全区运动会羽毛球男子团体第7名成员',
  }),
];
---

<Section
  id="credentials"
  title={t({
    en: 'Honors/Skills Credentials',
    'zh-cn': '荣誉/技能证书',
  })}
  subtitle="🏆"
>
  <ul class="grid w-full grid-cols-1 gap-2 sm:grid-cols-2">
    {credentialList.map((item) => <li set:html={item} />)}
  </ul>
</Section>
